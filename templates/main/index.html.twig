{% extends 'base.html.twig' %}

{% block body %}
    <main class="container">
        <section class="row"> 

            <h1> Nos categories </h1>
            {# <p> Bienvenue 
                {% if app.user %}
                    <div class="mb-3">
                    {{ app.user.userIdentifier }}
                    </div>
                {% endif %}
            </p> #}

            {% for category in categories %}
           
                {% if category.parent == null %}
                    <div class="col-12"> <h2> {{ category.name }} </h2> </div>
                {% else %}
                    <div class="col-4"> 
                        <div class="card h-100">
                            <div class="card-body">
                                <h3 class="card-title">{{ category.name }}</h3>
                                <a href="{{ path ('category_liste', {slug: category.slug}) }}" class="btn btn-primary"> Voir plus</a>
                            </div>
                        </div>
                    </div>
                {% endif %}    
            {% endfor %}

            {# <div class="col-12">
                {{ dump() }}
            </div> #}
            
        </section>    
    </main>
{% endblock %}

