{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
   

    <section class="container my-3">
        <div class="row">
            <div class="col">
                <h1>Inscription</h1>

                    {{ form_start(registrationForm) }}

                       <fieldset class="mb-3"> 
                            <legend>Identite</legend>

                            {{ form_row(registrationForm.lastname ) }}
                            {{ form_row(registrationForm.firstname ) }}
                            {{ form_row(registrationForm.email ) }}

                       </fieldset>
                       
                        <fieldset class="mb-3"> 
                            <legend>Coordonees</legend>

                            {{ form_row(registrationForm.address ) }}
                            {{ form_row(registrationForm.zipcode ) }}
                            {{ form_row(registrationForm.city ) }}
                        </fieldset>

                            {{ form_row(registrationForm.plainPassword, {label: 'Password' }) }}     
                            {{ form_row(registrationForm.RGPDConsent) }}
                    

                        <button type="submit" class="btn btn-primary btn-lg mb-3">Register</button>
                    {{ form_end(registrationForm) }}
            </div>
        </div>
    </section>
{% endblock %}
